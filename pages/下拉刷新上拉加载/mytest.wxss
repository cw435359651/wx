/* pages/mytest/mytest.wxss */
swiper{
  margin-bottom: 10px; 
}
swiper-item image{
  width: 100%;
}


.haeder{
  height: 30px;
  border-left: 3px solid rgb(61, 224, 47);
  padding-left: 10px;
  color: #333;
  font-size: 18px;
  line-height: 30px;
  position: relative;  
}
.goToAll{
  position: absolute;
  right: 10px;
  font-size: 14px;
  color: rgb(61, 224, 47);
  top: 0;
}
.goodsList{
  display: flex;
  flex-direction: row;
  padding: 10px 16px;
  flex-wrap:wrap;
  justify-content: space-between;
}
.goodItem{
  width: 48.5%;
  height: 30vh;
  overflow: hidden;
  position: relative;
  margin-bottom: 10px; 
}
.goodItem .imgs{
  width: 100%;
  height: 100%;
}
.goodItem .coverText{
  height: 20px;
  line-height: 20px;
  text-align: center;
  background: rgba(0, 0, 0, 0.3);
  position: absolute;
  bottom: 0;
  left: 0;
  color: #fff;
  font-size: 12px; 
  width: 100%;
}
.goodsList2{
  display: flex;
  padding: 2px;
  flex-direction: column;
}

.goodItem2{
  width: 100%;
  margin-bottom: 10px; 
}
.goodItem2 .imgs{
  height: 30vh;
  width: 100%;
  
}
.titleBox{
  position: relative;
  display: flex;
  flex-direction: column;
  padding: 0 10px;
}
.title{
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  color: #333;  
}
.msg{
  font-size: 12px;
  color: #666;  
}
.userLog{
  position: absolute;
  width: 60px;
  height: 60px;
  border-radius: 100%;
  overflow: hidden; 
  right: 20px;
  top: -30px; 
}
