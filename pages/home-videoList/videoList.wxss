view{
  box-sizing: border-box;
}
 #videoList{
   width: 100%;
   background: #f5f5f5;
 }
   .content{
     width: 100%;
     padding: 12px 16px;
     background: #fff;
     margin-bottom: 10px;
   }
   .content .videoBox{
     width: 100%;
     border-radius: 4px;
     overflow: hidden;
     border-bottom: 1px solid #ccc;
   }
   .content .videoBox video{
      width: 100%;
      height: 180px;
   }
   .videoName{
     width: 100%;
     display: flex;
     justify-content: space-between;
     padding: 4px;
   }
     .videoName text{
         font-size: 14px;
         line-height: 20px;
        font-weight: 700;
         color: #373737;
         width: 85%;
         /* background: pink; */
     }
      .videoName image{
        width: 30px;
        height: 30px;
        background: blueviolet;
        border-radius: 100%;
    }

    .reply-box{
      width: 100%;
      display: flex;
      justify-content: space-between;
      color: #696969;
      font-size: 14px;
      /* background: greenyellow; */
    margin-top: 8px;
    }
    .left{
      height: 30px;
      display: flex;
      /* background: pink; */
    }
    .left text{
      height: 30px;
     line-height: 30px;
     
    }
    .uesrImg{
        width: 30px;
        height: 30px;
        background: blueviolet;
        border-radius: 100%;
    }
  .right{
    /* background: yellow; */
     display: flex;
     height: 30px;
     line-height: 30px;
  }
