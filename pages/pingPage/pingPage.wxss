/* pages/pingPage/pingPage.wxss */
.imgbox{
  height: 80rpx;
  width: 80rpx;
  border-radius: 100%;
  position: relative;
  background: #ccc;
}
.imgbox image{
  height: 100%;
  width: 100%;
  border-radius: 100%;
}
.icon{
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  background: #ccc;
  border-radius: 100%; 
}
.moreTitle{
  margin-top: 10px; 
  height: 24px;
  line-height: 24px;
  font-size: 14px;
  color: #333;
  font-weight: bold;
}
.pingBox{
  display: flex;
  flex-direction: column;
   border-top: 5px solid #e6e6e6;
    padding: 0 10px;  
}
.noPing{
  text-align: center;
  font-size: 14px;
  color: #666;
  padding: 20px 0; 
}
.pingList,.pingBox,.rightUserMsg{
  display: flex;
  flex-direction: column;
}
.pingListBox{
 margin: 5px 0; 
 padding-bottom: 5px; 
 border-bottom: 1rpx solid rgb(226, 226, 226); 
}
.pingUserBox{
  display: flex;
}
.rightUserMsg{
  justify-content: space-around;
  margin-left: 10px;
  flex: 1; 
}
.pingUsername{
  font-size: 14px;
  color: #666;
}
.pingDate{
  font-size: 12px;
  color: #ccc;
}
.pingZhanBox{
  display: flex;
  align-content: center;
}
.pingZhan{
  color: #666;
  font-size: 12px; 
  margin-right: 5px;
  height: 60rpx;
  line-height: 60rpx;
}
.pingMsgBox{
  margin-top: 6px; 
  padding-left: 100rpx;
  display: flex;
  color: #333;
  font-size: 14px;
  overflow: hidden;
}
.huifu{
  padding-left: 100rpx;
  color: #66ccff;
  font-size: 14px;
  margin-top: 6px; 
}

.ingputBox{
  height: 45px;
  position: fixed;
  border-top: 1rpx solid #ccc;
  z-index: 100;
  bottom: 0;
  background: #fff;
  display: flex;
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
  font-size: 16px;
  color: #333;
  justify-content: space-between;
}
.inputTxt{
  flex: 1;
}
.inputBtn{
  width: 24px;
  height: 24px;
  background: #ccc;
  margin-left: 10px; 
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.pinUser{
  padding: 0 10px;
  box-sizing: border-box;
}
.pinUser .pingListBox{
  border: 0;
}