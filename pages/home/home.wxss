/* pages/home/home.wxss */
view{
    box-sizing: border-box;
}
image{
  width: 100%;
}
#home{
  width: 100%;
  background: #ccc;
}
.top{
  background: #fff;
    padding: 10px

}
swiper{
  border-radius: 4px;
  overflow: hidden;
}
 /* icon图标分类  */
 .icon-list-box{
   padding: 20px 0;
   width: 100%;
   display: flex;
   justify-content: space-between;
   border-bottom: 1px solid #F3F3F3;

 }
 .icon-list{
   width: 55px;
   padding: 2px;
 }
 .icon-list .icon{
   width: 100%;
   height: 50px;
   line-height: 50px;
   text-align: center;
   border-radius: 100%;
   overflow: hidden;
   background: #FF3427;
 }
  .icon-list text{
    font-size: 12px;
    color: #444444;
    font-weight: 600;
    text-align: center;
  }
  /* 歌单推荐和新歌 */
  .song-list-box{
    padding: 14px 0 8px 0;
    /* background: pink; */
  }
  .song-list-box .title{
     display: flex;
     justify-content: space-between;
     font-size: 18px;
     font-weight: 700;
     color: #373737;
   }
  .song-list-box .song-btn{
    padding: 0px 14px;
    height: 28px;
    line-height: 28px;
    color: #636363;
    font-size:14px;
    border: 1px solid #EDEDED;
    border-radius: 8px;
  }
  .song-list{
    width: 100%;
    padding: 10px 0;
    /* background: pink; */
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  .song{
    width: 110px;
    margin-bottom: 10px;
  }
  .songImg{
    background: greenyellow;
    width: 100%;
    height: 110px;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 6px;
  }
  .songImg image{
    width: 100%;
    height: 100%
  }
   .song text{
     display: block;
      width: 100%;
     font-size: 12px;
     color: #696969;
     line-height: 18px;
   }
   .songName{
     font-size: 12px;
   }
   /* 云村精选 */
   .bottom{
     width: 100%;
   }
   .sift{
     width: 100%;
     /* padding: 10px; */
     /* background: #fff; */
     margin-top: 10px;
   }
   .sift .title{
     width: 100%;
     padding: 10px;
     height: 40px;
     line-height: 40px;
     display: flex;
     justify-content: space-between;
    border-bottom: 1px solid #f5f5f5;
    background: #fff;

   }
   .sift .title text{
     font-size: 16px;
     font-weight: 700;
     color: #373737;
   }
   .sift .new-btn{
    padding: 0px 14px;
    height: 40px;
    line-height: 40px;
    color: #636363;
    font-size:14px;
   }

   /* 云村内容盒子 */
   .content{
     width: 100%;
     padding: 12px 16px;
     background: #fff;
     margin-bottom: 10px;
   }
   .content .videoBox{
     width: 100%;
     border-radius: 4px;
     overflow: hidden;
   }
   .content .videoBox video{
      width: 100%;
      height: 180px;
   }
   .videoName{
     width: 100%;
     display: flex;
     justify-content: space-between;
     padding: 4px;
     background: #F5F5F5;
   }
     .videoName text{
         font-size: 14px;
         height: 30px;
         line-height: 30px;
        font-weight: 700;
         color: #373737;
     }
      .videoName image{
        width: 30px;
        height: 30px;
        background: blueviolet;
        border-radius: 100%;
    }
    .reply-box{
      width: 100%;
      display: flex;
      color: #696969;
      font-size: 14px;
      /* background: greenyellow; */
    margin-top: 8px;
    }
    .reply-box text{
      margin-left: 10px;
    }
    .dot{
      margin-right: 40px;
      display: flex;
    }
    .reply{
      display: flex;
    }
  


 
