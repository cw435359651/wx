.header{
  width: 100%;
  height: 30px;
  line-height: 30px;
  display: flex;
  justify-content: space-between;
  font-size: 16px;
  padding: 0 10px;
  box-sizing: border-box;
  position: relative;
}
.header .headerList text{
  padding: 0 10px;
  color: #989898;
}
.header .headerList .active{
  color: #3C3C3C;
  font-size: 18px;
  font-weight: 500;
}
/* 左侧列表 */
.header .personal-center{
  box-sizing: border-box;
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 999;
  transition: all .1s linear;
}
.header .personal-center .top{
  overflow: hidden;
  height: 667px;
    width:85%;
  background: #FAFAFA;
  padding: 10px;
}
.userImg{
  width: 50px;
  height: 50px;
  border-radius: 100%;
  background: yellow;
}
.userImg image{
  width: 100%;
  height: 100%;
}
.userMsg{
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 14px;
}
.userMsg .right{
  width: 65px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  background: #FE603D;
  border-radius: 20px;
  color: #fff;

}
.userMsg .left{
   height: 30px;
  line-height: 30px;
}
.userMsg .left view{
  margin-right: 6px;
  display: inline-block;
}
.userMsg .vip{
  height: 24px;
  line-height: 24px;
  background: #ccc;
  color: #fff;
  padding: 0 10px;
  border-radius: 4px;
}
.userMsg .grade{
   height: 24px;
  line-height: 24px;
  background: #EEEEEC;
  color: #898987;
  padding: 0 10px;
  border-radius: 10px;
  font-weight: 400;
} 


